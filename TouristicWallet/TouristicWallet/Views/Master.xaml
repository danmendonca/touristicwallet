<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TouristicWallet.Views.Master"
             xmlns:vm="clr-namespace:TouristicWallet.ViewModels"
             Title="Wallet"
             Icon="menu.png"
             BackgroundColor="#1E1E1E">

  <ContentPage.BindingContext>
    <vm:MasterPageViewModel x:Name="ViewModel"/>
  </ContentPage.BindingContext>

  <StackLayout>
    
    <Label FontSize="Medium" Text="Menu" TextColor="White" HorizontalTextAlignment="Center"/>
    <Button Text="Edit Owned" Command="{Binding GoToManagement}" BorderColor="White" >
      <Button.BorderColor>
        <OnPlatform x:TypeArguments="Color" WinPhone="White"/>
      </Button.BorderColor>
      <Button.TextColor>
        <OnPlatform x:TypeArguments="Color" WinPhone="White"/>
      </Button.TextColor>
    </Button>
    <!--<Button Text="Button" Command="{Binding GoToManagement}">
      <Button.BorderColor>
